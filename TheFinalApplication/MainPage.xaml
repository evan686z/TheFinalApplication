<Page x:Class="TheFinalApplication.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:TheFinalApplication"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:data="using:TheFinalApplication"
      mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:DataType="data:Unit"
                      x:Key="UnitDataTemplate">
            <StackPanel HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        BorderBrush="#FFCB5252"
                        BorderThickness="1"
                        CornerRadius="5"
                        Background="#FFF4B238"
                        Opacity="0.6"
                        Width="220">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="16"
                               Margin="10"
                               Text="Unit Name: " />
                    <TextBlock FontSize="16"
                               Width="200"
                               Margin="10"
                               Text="{x:Bind UnitName}" />
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
          Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock HorizontalAlignment="Center"
                       Name="UnitDisplay_TextBlock"
                       FontSize="14"
                       FontWeight="Bold"
                       Text="Click a Unit for Details"
                       Margin="0, 20,0,0" />
            <ListView ItemsSource="{x:Bind Units, Mode=OneWay}"
                      Name="UnitListView_ListView"
                      HorizontalAlignment="Center"
                      IsItemClickEnabled="True"
                      ItemClick="GridView_ItemClick"
                      ItemTemplate="{StaticResource UnitDataTemplate}"
                      Margin="10">
            </ListView>
            <TextBox Name="Filter_TextBox"
                     FontSize="16"
                     Width="200"
                     Margin="10" />
            <Button Name="FilterButton"
                    HorizontalAlignment="Center"
                    Content="Filter by Name"
                    Click="FilterButton_Click" />
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock HorizontalAlignment="Center"
                       Name="ResultTextBlock"
                       FontSize="14"
                       Foreground="Red"
                       FontWeight="Bold"
                       Text="Choose a Unit to Display"
                       Margin="0,20,0,0" />
            <Image Width="200"
                   Name="UnitImage"
                   Grid.Row="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="10" />
            <TextBlock FontSize="16"
                       Width="200"
                       Margin="10"
                       Text="{x:Bind UnitName}" />
            <TextBlock FontSize="16"
                       Width="200"
                       Margin="10"
                       Text="{x:Bind UnitLVL}" />
            <TextBlock FontSize="16"
                       Width="200"
                       Margin="10"
                       Text="{x:Bind UnitHP}" />
            <TextBlock FontSize="16"
                       Width="200"
                       Margin="10"
                       Text="{x:Bind UnitATK}" />
            <TextBlock FontSize="16"
                       Width="200"
                       Margin="10"
                       Text="{x:Bind UnitMAG}" />
            <TextBlock FontSize="16"
                       Width="200"
                       Margin="10"
                       Text="{x:Bind UnitMP}" />
            <TextBlock FontSize="16"
                       Width="200"
                       Margin="10"
                       Text="{x:Bind UnitDEF}" />
            <TextBlock FontSize="16"
                       Width="200"
                       Margin="10"
                       Text="{x:Bind UnitSPR}" />
        </StackPanel>
    </Grid>
</Page>
